{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",

    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File",
            //"Serilog.Sinks.MariaDB",
            "Serilog.Sinks.MariaDB.MySqlData"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
                }
            },
            {
                "Name": "MariaDB",
                "Args": {
                    "connectionString": "Data Source=localhost;Port=3306;User ID=root;Password=root;Initial Catalog=serilog_demo;Charset=utf8mb4;SslMode=none;Max pool size=1;Connection LifeTime=20",
                    "autoCreateTable": true,
                    "tableName": "aspnetcore_serilog",
                    "restrictedToMinimumLevel": "Information",
                    "batchPostingLimit": 1, //1000
                    "period": "0.00:00:03",
                    "options": {
                        "PropertiesToColumnsMapping": {
                            "Exception": "exception",
                            "Level": "level",
                            "Message": "message",
                            "MessageTemplate": "message_template",
                            "Properties": "properties",
                            "Timestamp": "timestamp"
                        },
                        "TimestampInUtc": false,
                        "ExcludePropertiesWithDedicatedColumn": true,
                        "EnumsAsInts": true,
                        "LogRecordsCleanupFrequency": "0.02:00:00",
                        "LogRecordsExpiration": "31.00:00:00"
                    }
                }
            }
        ]
    }
}
